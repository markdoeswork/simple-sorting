
<%= tag.div id: :boards, data: {products: @products.to_json } do %>
  <div>
    <div class="flex">
      <div class="ml-8 mt-6 pb-12 w-1/3">
        <input v-autofocus v-model="scan" v-on:keyup.enter="addItem" ref="scan" class="py-3 border-2 border-blue pl-1">

        <button v-on:click="addItem" class="mr-12 mt-2 -ml-3 hover:no-underline border-1 border-blue bg-blue hover:bg-blue-dark hover:text-white text-white px-8 py-4 rounded-r-lg ">
          Submit
        </button>
      </div>
      <div class="w-1/3 text-center mt-12">
      <h1 v-if="awesome"><strong style="font-size:64px;">{{ awesome }}</strong></h1>
      <h1 class="mb-12" v-if="awesometwo"><strong style="font-size:64px;color:gray">{{ awesometwo }}</strong></h1>
      </div>
    </div>

<div class="flex">

<!-- scan list -->
  <div class='w-1/5'>
  <table class="">
  <thead>
  <th class="text-center border-grey-dark">Scans</th>
  </thead>

  <tbody>
  <tr v-for="(item, index) in scannedItems.slice().reverse()" class="">
    <td class=""> {{ item.scan }}</td>
    <td>
      <button @click="deleteItem(index)">
        delete
      </button>
    <td>
  </tr>
  </div>
  </tbody>
  </table>
</div>

<!-- scan table -->
<div class='w-4/5'>
  <table>
    <thead>
    <th class="text-center border-grey-dark">Position</th>
      <th class="text-center border-grey-dark">Scanned Value</th>
      <th class="text-center border-grey-dark">Quantity</th>
    </thead>
    <tbody>
  <!-- start of index -->
    <tr  v-for="(testarr, index) in displayScan" class="w-1/5 mx-4 my-6">
      <td class="">{{ index + 1 }}</td>
      <td class="">{{ testarr.product }}</td>
      <td class="">{{ testarr.qty }}</td>
    </tr>
    </tbody>
  </table>
</div>
<% end %>


